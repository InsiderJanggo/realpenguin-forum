<!DOCTYPE html>
<html lang="<%= lingua.locales %>">
<head>
     <%- include("includes/head.ejs") %>
     <title><%= lingua.register.content.page_title %></title>
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
    
            <p>&larr; <a href="/"><%= lingua.register.content.home_btn %></a>
    
            <h4><%= lingua.register.content.title %></h4>
            <p><%= lingua.register.content.login_text %> <a href="/login"><%= lingua.register.content.login_btn %></a></p>
    
            <form action="" method="POST">
    
                <div class="form-group">
                    <label for="name"><%= lingua.register.content.input.full_name %></label>
                    <input class="form-control" type="text" name="name" placeholder="<%= lingua.register.content.input.full_name %>"/>
                </div>
    
                <div class="form-group">
                    <label for="username"><%= lingua.register.content.input.username %></label>
                    <input class="form-control" type="text" name="username" placeholder="<%= lingua.register.content.input.username %>" />
                </div>
    
                <div class="form-group">
                    <label for="email"><%= lingua.register.content.input.email %></label>
                    <input class="form-control" type="email" name="email" placeholder="<%= lingua.register.content.input.email %>" />
                </div>
    
                <div class="form-group">
                    <label for="password"><%= lingua.register.content.input.password %></label>
                    <input class="form-control" type="password" name="password" placeholder="<%= lingua.register.content.input.password %>" />
                </div>
    
                <input type="submit" class="btn btn-success btn-block" name="register" value="<%= lingua.register.content.input.register %>" style="background-color: green;" />
    
            </form>
                
            </div>
    
            <div class="col-md-6">
                <img class="img img-responsive" src="img/f3bf0dfc71e9a776a0f3cbe764a2abbe.png" width="500px" height="500px"/>
            </div>
    
        </div>
    </div>
</body>
</html>